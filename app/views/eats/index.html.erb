<main class="main">
  <div class="inner">
    <%# ログインしているときは以下を表示する %>
    <% if user_signed_in? %>
      <div class="greeting">
        Welcome to
        <%= link_to "#{current_user.name}さん", user_path(current_user), class: :greeting__link %>
      </div>
    <%# // ログインしているときは上記を表示する %>
    <% else %>
    <% "" %>
    <% end %>
    <div class="card__wrapper">
      <%# 投稿機能実装後、部分テンプレートでプロトタイプ投稿一覧を表示する %>
      <%= render partial: 'eat', collection: @eats %>
    </div>
    <div class='p-top'>
    <%= paginate @eats %>
    </div>
  </div>
</main>
